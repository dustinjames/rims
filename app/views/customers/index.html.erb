<%= link_to new_customer_path, class: "btn btn-primary pull-right" do %>
  <span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Add New Customer
<% end %>

<br /><br />

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title center">Customer Information</h3>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table">
        <tr>
          <th>Customer Name</th>
          <th>Phone Number</th>
          <th>Email Address</th>
          <th>Address</th>
          <th>Customer Type</th>
        </tr>

      <% @customers.each do |customer| %>
        <tr>
          <td><%= link_to customer.first_name+ " " + customer.last_name, customer_path(customer) %></td>
          <td><%= customer.phone_number %></td>
          <td><%= customer.email_address %></td>
          <td><%= customer.address + ", " + customer.city + ", " + customer.postal_code %></td>
          <td><%= customer.customer_type %></td>
        </tr>
        <% end %>
      </table>
  </div>
  </div>
</div>
